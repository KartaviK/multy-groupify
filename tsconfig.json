{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "esnext",
        "module": "commonjs",
        "outDir": "dist",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "checkJs": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "dist"
    ]
}
